{
  "name": "@padolabs/pado-ao-sdk",
  "version": "0.1.1",
  "author": "PADO Labs <dev@padolabs.org>",
  "description": "pado-ao-sdk",
  "repository": {
    "type": "git",
    "url": "https://github.com/pado-labs/pado-ao-sdk.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc --build tsconfig.json && cp src/lib/lhe.wasm dist/lib/",
    "lint": "eslint -c .eslintrc --ext .ts src",
    "format": "prettier --check --write src/**/*.ts  --config .prettierrc",
    "pretest:integration": "npm run build && npm link",
    "publish": "rm -rf dist/demo dist/test && npm publish --access public",
    "test": "jest"
  },
  "dependencies": {
    "@permaweb/aoconnect": "^0.0.51",
    "arbundles": "^0.11.1",
    "arweave": "^1.15.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prettier-package-json": "^2.8.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
